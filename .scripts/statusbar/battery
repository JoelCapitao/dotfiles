#!/bin/sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) notify-send "<b>ğŸ”‹ Battery module:</b>
ğŸ”‹: discharging
ğŸ›‘: off-line
â™»: stagnant charge
ğŸ”Œ: on-line
âš¡: charged
â—: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(acpi -b | grep -E -o '[0-9][0-9]?%' | sed -e 's/.\{1\}$//')
status=$(acpi -a | awk '{ print $3 }')

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
elif [ "$capacity" -ge 25 ]; then
	color="#ffff00"
else
	color="#ff0000"
	warn="â—"
fi

[ -z $warn ] && warn=""
[ "$status" = "on-line" ] && color="#ffffff"


echo  "$(echo "$status" | sed -e "s/,//;s/Discharging/ğŸ”‹/;s/off-line/ğŸ›‘/;s/on-line/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
echo  "$(echo "$status" | sed -e "s/,//;s/Discharging/ğŸ”‹/;s/off-line/ğŸ›‘/;s/on-line/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
echo "$color"
